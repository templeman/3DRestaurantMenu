{
  "name": "templeman.io",
  "version": "0.0.1",
  "description": "A simple NPM build tool",
  "main": "index.js",
  "author": "Sam Templeman",
  "license": "ISC",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean:css": "rm -rf dist/css/*.css",
    "clean:img": "rm -rf dist/images/*",
    "clean:js": "rm -rf dist/js/*",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "scss": "node-sass --source-map true --output-style compressed -o dist/css src/scss",
    "lint": "eslint dist/js",
    "uglify": "echo '=> minify:js' && mkdir -p dist/js && uglifyjs node_modules/jquery/dist/jquery.js src/js/main.js -c -o dist/js/app.min.js",
    "imagemin": "cp src/img/* dist/images>/dev/null | true",
    "serve": "browser-sync start --server --ss \"dist/\" --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "prebuild:css": "npm run clean:css",
    "build:css": "npm run scss",
    "prebuild:js": "npm run clean:js",
    "build:js": "npm run lint && npm run uglify",
    "prebuild:img": "npm run clean:img",
    "build:img": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:js && npm run build:img",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js\" -- npm run build:js",
    "watch:img": "onchange \"src/img\" -- npm run build:img",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:img",
    "dev": "npm run build:all && npm run watch:all",
    "production": "npm run autoprefixer"
  },
  "devDependencies": {
    "animate-sass": "git+https://github.com/tgdev/animate-sass.git",
    "autoprefixer": "^7.1.5",
    "browser-sync": "^2.18.12",
    "eslint": "^4.9.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^2.3.1",
    "imagemin-cli": "^3.0.0",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^4.1.1",
    "uglify-es": "^3.1.3",
    "uglify-js": "^3.1.4"
  }
}
